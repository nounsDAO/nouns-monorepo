{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_CHAIN_ID",
    "NEXT_PUBLIC_ENABLE_HISTORY",
    "NEXT_PUBLIC_ETHERSCAN_API_KEY",
    "NEXT_PUBLIC_INFURA_PROJECT_ID",
    "NEXT_PUBLIC_MAINNET_JSONRPC",
    "NEXT_PUBLIC_MAINNET_SUBGRAPH",
    "NEXT_PUBLIC_MAINNET_WSRPC",
    "NEXT_PUBLIC_SEPOLIA_JSONRPC",
    "NEXT_PUBLIC_SEPOLIA_SUBGRAPH",
    "NEXT_PUBLIC_SEPOLIA_WSRPC",
    "NEXT_PUBLIC_WALLET_CONNECT_V2_PROJECT_ID",
    "JSON_RPC",
    "PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["@nouns/assets#build", "@nouns/contracts#build", "@nouns/sdk#build"],
      "cache": false,
      "persistent": true
    }
  },
  "ui": "tui"
}
