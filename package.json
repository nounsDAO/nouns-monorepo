{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "NODE_OPTIONS=--max_old_space_size=16384 prettier --write 'packages/**/*.{ts(x)?,sol,md,css,json}' '!**/typechain/**'",
    "lint": "eslint 'packages/**/*.ts' --fix",
    "test": "turbo run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "chai": "^4.5.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^5.0.9",
    "mocha": "^8.4.0",
    "netlify-cli": "^20.1.1",
    "pinst": "^2.1.6",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=16.x"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "netlify-cli",
      "sharp",
      "unix-dgram"
    ],
    "overrides": {
      "@babel/traverse": ">=7.23.2",
      "@openzeppelin/contracts": "4.4.0",
      "@openzeppelin/contracts-upgradeable": "4.4.0",
      "@openzeppelin/hardhat-upgrades": "1.8.2",
      "@openzeppelin/upgrades-core": "1.10.0",
      "@types/node": "^22.15.3",
      "async": ">=2.6.4",
      "axios": ">=0.30.0",
      "braces": ">=3.0.3",
      "cross-spawn": ">=7.0.5",
      "elliptic": ">=6.6.1",
      "esbuild": ">=0.25.0",
      "flat": ">=5.0.1",
      "got": ">=11.8.5",
      "http-cache-semantics": ">=4.1.1",
      "lodash": ">=4.17.21",
      "nanoid": ">=5.1.5",
      "node-gettext": ">=3.0.0",
      "nth-check": ">=2.0.1",
      "postcss": ">=8.4.31",
      "qs": ">=6.5.3",
      "semver": ">=7.5.2",
      "underscore": ">=1.12.1",
      "ws": ">=7.5.10"
    }
  }
}
